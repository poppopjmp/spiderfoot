# =============================================================================
# SpiderFoot Microservices Environment Configuration
# Copy to .env and customize before running docker compose
# =============================================================================

# --- Database ---
POSTGRES_DB=spiderfoot
POSTGRES_USER=spiderfoot
POSTGRES_PASSWORD=changeme

# --- Redis ---
# No password by default; set if needed
# REDIS_PASSWORD=

# --- Scanner Settings ---
SF_SCANNER_MAX_SCANS=3
SF_WORKER_MAX=8
SF_WORKER_STRATEGY=thread

# --- API Settings ---
SF_API_WORKERS=4
SF_API_KEY=

# --- Resource Limits ---
SCANNER_CPUS=4.0
SCANNER_MEMORY=4G
API_CPUS=2.0
API_MEMORY=2G
WEBUI_CPUS=1.0
WEBUI_MEMORY=1G

# --- Ports ---
SF_HTTP_PORT=80
SF_HTTPS_PORT=443

# --- Logging ---
SF_LOG_LEVEL=INFO
