# =============================================================================
# SpiderFoot Microservices Environment Configuration
# Copy to .env and customize before running docker compose
# =============================================================================

# --- Database ---
POSTGRES_DB=spiderfoot
POSTGRES_USER=spiderfoot
POSTGRES_PASSWORD=changeme

# --- Redis ---
# No password by default; set if needed
# REDIS_PASSWORD=

# --- Scanner Settings ---
SF_SCANNER_MAX_SCANS=3
SF_WORKER_MAX=8
SF_WORKER_STRATEGY=thread

# --- API Settings ---
SF_API_WORKERS=4
SF_API_KEY=

# --- Resource Limits ---
SCANNER_CPUS=4.0
SCANNER_MEMORY=4G
API_CPUS=2.0
API_MEMORY=2G
WEBUI_CPUS=1.0
WEBUI_MEMORY=1G

# --- Ports ---
SF_HTTP_PORT=80
SF_HTTPS_PORT=443

# --- Logging ---
SF_LOG_LEVEL=INFO

# --- MinIO Object Storage ---
MINIO_ROOT_USER=spiderfoot
MINIO_ROOT_PASSWORD=changeme123
SF_MINIO_API_PORT=9000
SF_MINIO_CONSOLE_PORT=9001

# --- Monitoring Stack ---
SF_GRAFANA_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=spiderfoot
SF_PROMETHEUS_PORT=9090
SF_LOKI_ENDPOINT=http://loki:3100

# --- Distributed Tracing ---
SF_JAEGER_UI_PORT=16686
SF_OTEL_ENDPOINT=http://vector:4317

# --- Monitoring Resource Limits ---
LOKI_CPUS=1.0
LOKI_MEMORY=512M
GRAFANA_CPUS=1.0
GRAFANA_MEMORY=512M
PROMETHEUS_CPUS=1.0
PROMETHEUS_MEMORY=512M
