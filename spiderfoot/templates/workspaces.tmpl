function escapeHtml(text) {
    var map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
    };
    return text.replace(/[&<>"']/g, function(m) { return map[m]; });
}

// Function to calculate interval in hours
function getIntervalInHours() {
    var interval = $('#scanInterval').val();
    var hours = 0;
    
    switch(interval) {
        case 'hourly':
            hours = 1;
            break;
        case 'daily':
            hours = 24;
            break;
        case '2days':
            hours = 48;
            break;
        case '3days':
            hours = 72;
            break;
        case 'weekly':
            hours = 168; // 7 * 24
            break;
        case 'biweekly':
            hours = 336; // 14 * 24
            break;
        case 'monthly':
            hours = 720; // 30 * 24
            break;
        case 'quarterly':
            hours = 2160; // 90 * 24
            break;
        case 'custom':
            var days = parseInt($('#customIntervalDays').val()) || 0;
            var additionalHours = parseInt($('#customIntervalHours').val()) || 0;
            hours = (days * 24) + additionalHours;
            break;
    }
    
    return hours;
}

// Function to format time window display
function formatTimeWindow(hours) {
    if (hours === 0) return 'Not configured';
    
    if (hours < 24) {
        return hours + ' hour' + (hours !== 1 ? 's' : '');
    } else if (hours % 24 === 0) {
        var days = hours / 24;
        return days + ' day' + (days !== 1 ? 's' : '');
    } else {
        var days = Math.floor(hours / 24);
        var remainingHours = hours % 24;
        return days + ' day' + (days !== 1 ? 's' : '') + ', ' + 
               remainingHours + ' hour' + (remainingHours !== 1 ? 's' : '');
    }
}

// Function to update time window display
function updateTimeWindowDisplay() {
    var hours = getIntervalInHours();
    var timeWindowText = formatTimeWindow(hours);
    $('#timeWindowDisplay').html('<span class="text-info"><strong>' + timeWindowText + '</strong></span>');
}

// Function to calculate and display next scan time
function updateNextScanTime() {
    var hours = getIntervalInHours();
    var startTime = $('#scanTime').val();
    
    if (hours === 0 || !startTime) {
        $('#nextScanInfo').hide();
        return;
    }
    
    // Calculate next scan time
    var now = new Date();
    var nextScan = new Date();
    
    // Set time to today at the preferred start time
    var timeParts = startTime.split(':');
    nextScan.setHours(parseInt(timeParts[0]), parseInt(timeParts[1]), 0, 0);
    
    // If the time has already passed today, add the interval to get the next occurrence
    if (nextScan <= now) {
        nextScan.setTime(nextScan.getTime() + (hours * 60 * 60 * 1000));
    }
    
    // Format the date
    var nextScanFormatted = nextScan.toLocaleDateString('en-US', {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        timeZoneName: 'short'
    });
    
    // Calculate time until next scan
    var timeDiff = nextScan.getTime() - now.getTime();
    var timeUntil = '';
    
    if (timeDiff > 0) {
        var daysUntil = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
        var hoursUntil = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutesUntil = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
        
        if (daysUntil > 0) {
            timeUntil = '(' + daysUntil + ' day' + (daysUntil !== 1 ? 's' : '') + ', ' + 
                       hoursUntil + ' hour' + (hoursUntil !== 1 ? 's' : '') + ' from now)';
        } else if (hoursUntil > 0) {
            timeUntil = '(' + hoursUntil + ' hour' + (hoursUntil !== 1 ? 's' : '') + ', ' + 
                       minutesUntil + ' minute' + (minutesUntil !== 1 ? 's' : '') + ' from now)';
        } else {
            timeUntil = '(' + minutesUntil + ' minute' + (minutesUntil !== 1 ? 's' : '') + ' from now)';
        }
    }
    
    $('#nextScanTime').text(nextScanFormatted);
    $('#timeUntilNext').text(timeUntil);
    $('#nextScanInfo').show();
}
